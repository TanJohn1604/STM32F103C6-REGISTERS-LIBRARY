#include <stdint.h>
#include "gpio.h"
#include "system_clock.h"
uint16_t signal=0;
int main(void)
{
    config();
	init_GP(PC,13,OUT50,O_GP_PP);
	init_GP(PA,0,IN,I_PP);
	W_GP(PC, 13, LOW);

	AFIO->EXTICR[0] =0;
	EXTI->IMR |=1;
	EXTI->RTSR|=1;

	__disable_irq();
	NVIC_EnableIRQ(EXTI0_IRQn);
	__enable_irq();

	while(1){
		if(signal){
			 delay_ms(1000);
			toggle_GP(PC, 13);
				delay_ms(1000);
		}else{
			W_GP(PC, 13, HIGH);
		}
	}
}
void EXTI0_IRQHandler(){
	EXTI->PR |=1;
	delay_ms(100);
	if(R_GP(PA, 0)==1){
		if(signal){
				signal=0;
			}else{
				signal=1;
			}
	}

}
