#include"interrupt_PA0.h"
void init_interrupt_PA0(){
	AFIO->EXTICR[0] =0;
		EXTI->IMR |=1;
		EXTI->RTSR|=1;
		__disable_irq();
		NVIC_EnableIRQ(EXTI0_IRQn);
		__enable_irq();
}
void EXTI0_IRQHandler(){
	//xóa bit nhớ sự kiện ngắt
	EXTI->PR |=1;
	delay_ms(100);
	if(R_GP(PA, 0)==1){
		if(signal){
				signal=0;
			}else{
				signal=1;
			}
	}

}
